# Configurações de PRODUÇÃO
# ATENÇÃO: Este arquivo contém configurações para ambiente de produção

# Ambiente
NODE_ENV=production
AMBIENTE=1
SIMULATION_MODE=false
DEBUG_MODE=false

# Servidor
PORT=3001
HOST=0.0.0.0

# Segurança
JWT_SECRET=sua_chave_jwt_super_secreta_aqui_production
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Banco de dados - DESABILITADO (sistema real usa apenas arquivos JSON)
# MONGODB_URI=mongodb://localhost:27017/brandaocontador_nfe_production
USE_MONGODB=false

# NFe - Configurações obrigatórias
UF=SP
CNPJ_EMITENTE=12345678000195
CERT_PATH=./certs/certificado.pfx
CERT_PASS=senha_do_certificado

# XML
XML_OUTPUT_DIR=./xml_output
SAVE_XML_FILES=true
XML_SECURITY_VALIDATE=true

# Logs
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Admin seed (para criação automática do usuário admin)
SEED_ADMIN_NOME=Administrador
SEED_ADMIN_EMAIL=admin@brandaocontador.com.br
SEED_ADMIN_SENHA=admin:123
ENABLE_AUTO_SEED=true

# CORS - Configurado para frontend Vercel
ALLOWED_ORIGINS=https://nfe.brandaocontador.com.br,https://brandaocontador.com.br

# SSL/TLS
SSL_ENABLED=true
SSL_CERT_PATH=./certs/ssl.crt
SSL_KEY_PATH=./certs/ssl.key

# Monitoramento
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# Cache
CACHE_TTL=300

# Email (opcional - para notificações)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=seu-email@gmail.com
EMAIL_PASS=sua_senha_app
EMAIL_FROM=noreply@brandaocontador.com.br

# Webhook (opcional - para notificações)
WEBHOOK_URL=https://seu-webhook.com/notifications